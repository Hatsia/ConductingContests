@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="row justify-content-center align-items-center" style="height: 80vh">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h1>Регистрация</h1>
            <h4>Создайте аккаунт.</h4>
            <hr/>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email">Почта</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Пароль</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">Подтверждение пароля</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Role">Выберите роль</label>
                <div class="col-md-10">
                    <label class="radio-inline"><input type="radio" asp-for="Input.Role" value="Basic" checked> Участник</label>
                    <label class="radio-inline"><input type="radio" asp-for="Input.Role" value="Organizer"> Организатор конкурса</label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Зарегистрировать</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
