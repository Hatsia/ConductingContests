@model ConductingContests.Models.Entities.Contest

@{
    ViewData["Title"] = "Удалить";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Удаление</h1>

<h3>Вы уверены, что хотите удалить данный конкурс?</h3>
<div>
    <h4>Конкурс</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            Название:
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-3">
            Описание:
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-3">
            Дата начала:
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-3">
            Дата окончания:
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class="col-sm-3">
            Статус:
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-3">
            Почта победителя:
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.WinnerUserName)
        </dd>
        <dt class="col-sm-3">
            Почта организатора:
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        <dt class="col-sm-3">
            Название категории:
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a class="btn btn-outline-primary" asp-action="Index">Вернуться к списку</a>
    </form>
</div>
